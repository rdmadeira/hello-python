{
  
  "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",    
    "editor.formatOnSave": true,

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [
      79,
      120
    ],
    
    
    
  },
  "black-formatter.args": [
    "--line-length=150"
  ],
}